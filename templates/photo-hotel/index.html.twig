{% extends 'base.html.twig' %}

{% block title %}Photo index{% endblock %}

{% block body %}
    <h1>Photo de mon HÃ´tel</h1>
    <a class="btn btn-primary" href="{{ path('app_photo_new') }}">Ajouter des photos</a>
<div class="container">
  <div class="row align-items-start">
     {% if app.user and app.user.getHotel %}
        {% for photo in photos %}
            {% if photo.hotel == app.user.getHotel %}
            <div class="col col-12 col-lg-3 g-2">
                <div class="card card-photo-hotel m-2 ">
                    <img src="{{ asset('/uploads/photos/')  }}{{ photo.lien}}" class="card-img-top" alt="{{ photo.lien }}">
                    <div class="card-body">
                        <a class="btn btn-primary" href="{{ path('app_photo_show', {'id': photo.id}) }}">Voir</a>
                        {% if not photo.cover %}
                            <a class="btn btn-primary" href="{{ path('app_photo_edit', {'id': photo.id}) }}">Couverture</a>
                        {% endif %}
                    </div>
                </div></div>
            {% endif %}
        {% else %}
        
               Aucune photo pour le moment...
           
        {% endfor %}
       
 {% endif %}
 </div>
                </div>   
    
{% endblock %}
