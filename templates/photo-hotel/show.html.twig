{% extends 'base.html.twig' %}

{% block title %}Photo{% endblock %}

{% block body %}
    <h1>Photo</h1>
    <a class="btn btn-primary"  href="{{ path('app_photo_index') }}">Retour Ã  la liste des photos</a>

    {% if not photo.cover %}
                            <a class="btn btn-primary" href="{{ path('app_photo_edit', {'id': photo.hotel.id,'cover': photo.id}) }}">Couverture</a>
                        {% endif %}
    {{ include('photo-hotel/_delete_form.html.twig') }}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ photo.id }}</td>
            </tr>
            <tr>
                <img src="{{ asset('/uploads/photos/')  }}{{ photo.lien}}" class="photo-show">
            </tr>
            <tr>
                <th>Cover</th>
                <td>{{ photo.cover ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    

   
{% endblock %}
