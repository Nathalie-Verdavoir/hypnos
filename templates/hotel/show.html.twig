{% extends 'base.html.twig' %}

{% block title %}Hotel{% endblock %}

{% block body %}

    <h2>{{ hotel.nom }} Hotel</h2>
      <a class="btn" href="{{ path('app_hotel_index') }}" title="Retour à la liste des Hôtels">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-arrow-left-square" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm11.5 5.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z"/>
            </svg>
        </a>
    {% if app.user and app.user.hotel and app.user.hotel.id == app.request.get('id') %}
        <a class="btn btn-primary" href="{{ path('app_hotel_edit', {'id': hotel.id}) }}" title="Editer cet Hôtel">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
            </svg>
        </a>
        {{ include('hotel/_delete_form.html.twig') }}
    {% endif %}
    <div class="container large-width">
        <div class="row align-items-start">
            <div class="col-12 col-lg-6 left-col">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title border bg-grey p-3">{{ hotel.nom }}</h3>
                        <p class="card-text">à {{ hotel.ville }}</p>
                        <p class="card-text border"><small class="text-muted">Infos</small></p>
                        <p class="card-text">{{ hotel.description }}</p>
                        <p class="card-text border"><small class="text-muted">Adresse</small></p>
                        <p class="card-text">{{ hotel.adresse }}</p>
                    </div> {# fin du texte haut de la card de l'hotel #}
                    <div class="card-img-bottom" >
                        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                {% for pic in hotel.photo %}
                                <div class="carousel-item {{ pic  is same as(hotel.photo[0]) ? "active" : ""}}">
                                <img src="{{ asset('uploads/photos/') }}{{ pic.lien }}" class="d-block w-100" alt="photo de l'hôtel">
                                </div>
                                {% endfor %}
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div> {# fin de l'image basse de la card de l'hotel #}
                </div> {# fin de la card de l'hotel #}
            </div> {# fin de la left-col #}
            <div class="col-12 col-lg-3 text-center">
                <div class="card">
                    <div class="card-body">
                        <h3 class="m-auto border bg-grey p-3">Les Chambres</h3>
                        <div class="scroll">
                        <div class="container">
                            <div class="row align-items-start">
                                {% for chambre in hotel.getChambres() %}
                                    <div class="card small col-12">
                                        {% if chambre.photo|length > 0 %}
                                            {% for pic in chambre.photo %}
                                                {% if pic.cover %}
                                                    <img src="{{ asset('uploads/photos/') }}{{pic.lien}}" class="card-img-top big" alt="photo de la chambre">
                                                {% endif %}
                                            {% endfor %}
                                        {% else %}
                                            <img src="{{ asset('uploads/photos/') }}nopic.jpg" class="card-img-top big" alt="aucune photo disponible">
                                        {% endif %}
                                        <div class="card-body">
                                            <h3 class="card-title">{{ chambre.titre }}</h3>
                                            <p class="card-text">{{ chambre.description }}</p>
                                            <p class="card-text">{{ chambre.prix }}
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="align-baseline bi bi-currency-euro" viewBox="0 0 16 16">
                                                    <path d="M4 9.42h1.063C5.4 12.323 7.317 14 10.34 14c.622 0 1.167-.068 1.659-.185v-1.3c-.484.119-1.045.17-1.659.17-2.1 0-3.455-1.198-3.775-3.264h4.017v-.928H6.497v-.936c0-.11 0-.219.008-.329h4.078v-.927H6.618c.388-1.898 1.719-2.985 3.723-2.985.614 0 1.175.05 1.659.177V2.194A6.617 6.617 0 0 0 10.341 2c-2.928 0-4.82 1.569-5.244 4.3H4v.928h1.01v1.265H4v.928z"/>
                                                </svg>
                                            </p>
                                            <a class="btn btn-primary iconic" href="{{ chambre.booking }}" title="Aller sur le site partenaire">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-globe2" viewBox="0 0 16 16">
                                                    <path d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm7.5-6.923c-.67.204-1.335.82-1.887 1.855-.143.268-.276.56-.395.872.705.157 1.472.257 2.282.287V1.077zM4.249 3.539c.142-.384.304-.744.481-1.078a6.7 6.7 0 0 1 .597-.933A7.01 7.01 0 0 0 3.051 3.05c.362.184.763.349 1.198.49zM3.509 7.5c.036-1.07.188-2.087.436-3.008a9.124 9.124 0 0 1-1.565-.667A6.964 6.964 0 0 0 1.018 7.5h2.49zm1.4-2.741a12.344 12.344 0 0 0-.4 2.741H7.5V5.091c-.91-.03-1.783-.145-2.591-.332zM8.5 5.09V7.5h2.99a12.342 12.342 0 0 0-.399-2.741c-.808.187-1.681.301-2.591.332zM4.51 8.5c.035.987.176 1.914.399 2.741A13.612 13.612 0 0 1 7.5 10.91V8.5H4.51zm3.99 0v2.409c.91.03 1.783.145 2.591.332.223-.827.364-1.754.4-2.741H8.5zm-3.282 3.696c.12.312.252.604.395.872.552 1.035 1.218 1.65 1.887 1.855V11.91c-.81.03-1.577.13-2.282.287zm.11 2.276a6.696 6.696 0 0 1-.598-.933 8.853 8.853 0 0 1-.481-1.079 8.38 8.38 0 0 0-1.198.49 7.01 7.01 0 0 0 2.276 1.522zm-1.383-2.964A13.36 13.36 0 0 1 3.508 8.5h-2.49a6.963 6.963 0 0 0 1.362 3.675c.47-.258.995-.482 1.565-.667zm6.728 2.964a7.009 7.009 0 0 0 2.275-1.521 8.376 8.376 0 0 0-1.197-.49 8.853 8.853 0 0 1-.481 1.078 6.688 6.688 0 0 1-.597.933zM8.5 11.909v3.014c.67-.204 1.335-.82 1.887-1.855.143-.268.276-.56.395-.872A12.63 12.63 0 0 0 8.5 11.91zm3.555-.401c.57.185 1.095.409 1.565.667A6.963 6.963 0 0 0 14.982 8.5h-2.49a13.36 13.36 0 0 1-.437 3.008zM14.982 7.5a6.963 6.963 0 0 0-1.362-3.675c-.47.258-.995.482-1.565.667.248.92.4 1.938.437 3.008h2.49zM11.27 2.461c.177.334.339.694.482 1.078a8.368 8.368 0 0 0 1.196-.49 7.01 7.01 0 0 0-2.275-1.52c.218.283.418.597.597.932zm-.488 1.343a7.765 7.765 0 0 0-.395-.872C9.835 1.897 9.17 1.282 8.5 1.077V4.09c.81-.03 1.577-.13 2.282-.287z"/>
                                                </svg>
                                            </a>   
                                            <a class="btn btn-primary iconic" href="{{ path('app_chambres_show', {'id': chambre.id}) }}" title="Voir">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                                                    <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                                                    <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                                                </svg>
                                            </a>         
                                            <a class="btn btn-primary iconic" href="{{ path('app_chambres_edit', {'id': chambre.id}) }}" title="Editer cette chambre">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                                </svg>
                                            </a>

                                            <a class="btn btn-primary iconic" href="{{ path('app_photo_chambre_index', {'chambre': chambre.id}) }}" title="Gérer les photos de cette chambre">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-images" viewBox="0 0 16 16">
                                                    <path d="M4.502 9a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3z"/>
                                                    <path d="M14.002 13a2 2 0 0 1-2 2h-10a2 2 0 0 1-2-2V5A2 2 0 0 1 2 3a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v8a2 2 0 0 1-1.998 2zM14 2H4a1 1 0 0 0-1 1h9.002a2 2 0 0 1 2 2v7A1 1 0 0 0 15 11V3a1 1 0 0 0-1-1zM2.002 4a1 1 0 0 0-1 1v8l2.646-2.354a.5.5 0 0 1 .63-.062l2.66 1.773 3.71-3.71a.5.5 0 0 1 .577-.094l1.777 1.947V5a1 1 0 0 0-1-1h-10z"/>
                                                </svg>
                                            </a>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-3 text-center">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title border bg-grey p-3">Réservations</h3>
                        <p class="card-text">à {{ hotel.ville }}</p>
                        <p class="card-text border"><small class="text-muted">Chambre</small></p>
                        <p class="card-text">
                            <select name="chambreSelector" id="chambreSelector">
                                <option value="">--Choisir une chambre--</option>
                                {% for chambre in hotel.getChambres %}
                                <option value="{{chambre.id}}">{{ chambre.titre}}</option>
                                {% endfor %}
                            </select>
                        </p>
                        <p class="card-text border"><small class="text-muted">Dates</small></p>  
                        {{ include('reservation/_form.html.twig') }} <div class="input-group input-daterange"> <label class="">Select Date Range :</label> <input type="text" name="daterange" value="01/01/2018 - 01/15/2018" readonly /> </div>
  
                    </div> {# fin du texte haut de la card de la réservation #}
                    
                      
                        
                    
                </div> {# fin de la card de la réservation #}
            </div>
        </div>
    </div>
{% endblock %}
