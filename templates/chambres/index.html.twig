{% extends 'base.html.twig' %}

{% block title %}Les Chambres{% endblock %}

{% block body %}
    <h2>Toutes les Chambres</h2>

    <a class="btn btn-primary m-3 d-inline-flex align-items-center" href="{{ path('app_chambres_new') }}" title="Ajouter une chambre">
        Ajouter une chambre 
        <span class="col">
            <span class="svg-container">
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="svg-content bi bi-file-plus" viewBox="0 0 16 16">
                    <path d="M8.5 6a.5.5 0 0 0-1 0v1.5H6a.5.5 0 0 0 0 1h1.5V10a.5.5 0 0 0 1 0V8.5H10a.5.5 0 0 0 0-1H8.5V6z"/>
                    <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm10-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1z"/>
                </svg>
            </span>
        </span>
    </a>
    <a class="btn m-3" href="{{ path('app_hotel_show', { 'id' : app.user.getHotel.getId })}}" title="Retour à la liste des Hôtels">
            {% include 'boutons/return.html.twig' %}
        </a>
    {% if chambres|length > 0 %}
    
        <div id="carouselPhoto" class="carousel slide py-5" data-bs-ride="carousel">
            <div class="carousel-indicators my-5">
            {% set slide = 0 %}
            {% for chambre in chambres %}
                {% if app.user and chambre.hotel.gerant == app.user  %}
                    <button type="button" data-bs-target="#carouselPhoto" data-bs-slide-to="{{slide}}" class="{{ slide == 0 ? "active" : ""}}" aria-current="true" aria-label="Slide 1"></button>
                    {% set slide = slide + 1 %}
                {% endif %}
            {% endfor %}
            </div>
            <div class="carousel-inner">
                {% set active = true %}
                {% for chambre in chambres %}
                    {% if app.user and chambre.hotel and chambre.hotel.gerant == app.user  %}
                        <div class="carousel-item {{ active == true ? "active" : ""}}">
                            {% set active = false %}
                            <div class="card larg">
                                {% if chambre.photo|length > 0 %}
                                    {% for pic in chambre.photo %}
                                        {% if pic.cover %}
                                            <img src="https://res.cloudinary.com/hypnosimages/{{pic.lien}}" class="card-img-top big" alt="photo de la chambre">
                                        {% endif %}
                                    {% endfor %}
                                {% else %}
                                    <img src="https://res.cloudinary.com/hypnosimages/nopic.jpg" class="card-img-top big" alt="aucune photo disponible">
                                {% endif %}
                                <div class="card-body">
                                    <h3 class="card-title">{{ chambre.titre }}</h3>
                                    <p class="card-text">{{ chambre.description }}</p>
                                    <p class="card-text">{{ chambre.prix }}
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="align-baseline bi bi-currency-euro" viewBox="0 0 16 16">
                                            <path d="M4 9.42h1.063C5.4 12.323 7.317 14 10.34 14c.622 0 1.167-.068 1.659-.185v-1.3c-.484.119-1.045.17-1.659.17-2.1 0-3.455-1.198-3.775-3.264h4.017v-.928H6.497v-.936c0-.11 0-.219.008-.329h4.078v-.927H6.618c.388-1.898 1.719-2.985 3.723-2.985.614 0 1.175.05 1.659.177V2.194A6.617 6.617 0 0 0 10.341 2c-2.928 0-4.82 1.569-5.244 4.3H4v.928h1.01v1.265H4v.928z"/>
                                        </svg>
                                    </p>
                                    <a class="btn btn-primary iconic" target="_blank" href="{{ chambre.booking }}" title="Aller sur le site partenaire">
                                        {% include 'boutons/booking.html.twig' %}
                                    </a>   
                                    <a class="btn btn-primary iconic" href="{{ path('app_chambres_show', {'id': chambre.id}) }}" title="Voir">
                                        {% include 'boutons/voir.html.twig' %}
                                    </a>    
                                        
                                    <a class="btn btn-primary iconic" href="{{ path('app_chambres_edit', {'id': chambre.id}) }}" title="Editer cette chambre">
                                        {% include 'boutons/edit.html.twig' %}
                                    </a>

                                    <a class="btn btn-primary iconic" href="{{ path('app_photo_chambre_index', {'chambre': chambre.id}) }}" title="Gérer les photos de cette chambre">
                                        {% include 'boutons/edit-photos.html.twig' %}
                                    </a>
                                </div> {# end of card-body #}
                            </div> {# end of card #}
                        </div>    {# end of carousel-item #}
                    {% endif %}
                {% endfor %}
            </div> {# end of carousel-inner #}
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselPhoto" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselPhoto" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    {% else %}
        Aucune photo 
    {% endif %}
        

    
{% endblock %}
