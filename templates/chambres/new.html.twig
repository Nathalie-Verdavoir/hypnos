{% extends 'base.html.twig' %}

{% block title %}New Chambres{% endblock %}

{% block body %}
    <h2>Créer une chambre</h2>
 <div class="container">
        {{ form_start(form) }}
        <div class="row m-2">
            <div class="col-12 col-lg-3 d-flex flex-lg-row-reverse">
                {{ form_label(form.titre, 'Titre') }}
            </div>
            <div class="col-12 col-lg-3">
                {{ form_widget(form.titre) }}
            </div>
        </div>
         {{ form_errors(form.titre) }}
        <div class="row m-2">
            <div class="col-12 col-lg-3 d-flex flex-lg-row-reverse">
                {{ form_label(form.description, 'Sa description') }}
            </div>
            <div class="col-12 col-lg-3">
                {{ form_widget(form.description) }}
            </div>
        </div>
         {{ form_errors(form.description) }}
        <div class="row m-2">
            <div class="col-12 col-lg-3 d-flex flex-lg-row-reverse">
                {{ form_label(form.prix, 'Son prix') }}
            </div>
            <div class="col-12 col-lg-3">
                {{ form_widget(form.prix) }}
            </div>
        </div>
         {{ form_errors(form.prix) }}
        <div class="row m-2">
            <div class="col-12 col-lg-3 d-flex flex-lg-row-reverse">
                {{ form_label(form.booking, 'Booking') }}
            </div>
            <div class="col-12 col-lg-3">
                {{ form_widget(form.booking) }}
            </div>
        </div>
         {{ form_errors(form.booking) }}
        <div class="row m-2">
            <div class="col-3 col-lg-3"></div>
            <div class="col-9 col-lg-3"> 
                <button type="submit" class="btn m-3">Enregistrer</button>
                <a class="btn m-3" href="{{ path('app_chambres_index') }}" title="Retour à la liste des chambres">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-arrow-left-square" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm11.5 5.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z"/>
                    </svg>
                </a>
            </div>
        </div>
           
        {{ form_end(form) }}
    </div>
    
{% endblock %}
